класс Основной {

статическое сложение int(int a, int b) {

    return a + b;
}

static double Addition(double a, double b)
{
   
    return a + b;
}
public static void main(String args[]) {

   
    System.out.println(Addition(12, 14));
    System.out.println(Addition(15.2, 16.1));

}
